<%= form_for book do |f| %>
    <%= f.label :name, "書名" %>
    <%= f.text_field :name %> <br />

    <%= f.label :introduction, "簡介" %>
    <%= f.text_field :introduction %> <br />

    <%= f.label :author, "作者" %>
    <%= f.text_field :author %> <br />

    <%= f.label :price, "價格" %>
    <%= f.text_area :price %> <br />

    <%= f.submit %>
  <% end %>